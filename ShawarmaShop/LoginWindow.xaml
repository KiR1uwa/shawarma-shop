<Window x:Class="ShawarmaShop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Welcome" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Grid.Row="0" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Username" FontWeight="SemiBold"/>
            <TextBox x:Name="txtUsername" Width="250"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Password" FontWeight="SemiBold"/>
            <PasswordBox x:Name="txtPassword" FontSize="14" Padding="5" />
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Login" Width="80" Margin="5" Click="BtnLogin_Click"
                    Background="#27AE60" Foreground="White"/>
            <Button Content="Exit" Width="80" Margin="5" Click="BtnExit_Click"
                    Background="#E74C3C" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
