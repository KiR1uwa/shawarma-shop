<Window x:Class="ShawarmaShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShawarmaShop – Admin panel"
        Height="1080"
        Width="1920"
        WindowStartupLocation="CenterScreen">

    <DockPanel>

        <StatusBar DockPanel.Dock="Bottom"
                   Background="#EEE"
                   Padding="5">
            <TextBlock>User: Admin</TextBlock>
        </StatusBar>

        <Border DockPanel.Dock="Top"
                Background="#2C3E50"
                Height="50"
                Padding="10">
            <TextBlock Text="ShawarmaShop – administration panel"
                       Foreground="White"
                       FontSize="18"
                       VerticalAlignment="Center" />
        </Border>

        <!-- sidebar -->
        <Border DockPanel.Dock="Left"
                Width="320"
                Background="#34495E"
                Padding="10">
            <DockPanel LastChildFill="False">
                <StackPanel DockPanel.Dock="Top">
                    <Button x:Name="BtnMenu"
                            Content="🥙 Menu"
                            Margin="0 0 0 10"
                            Foreground="White"
                            Background="#3B5998"
                            FontWeight="Bold"
                            Click="BtnMenu_Click" />
                    <Button x:Name="BtnClients"
                            Content="👤 Clients"
                            Margin="0 0 0 10"
                            Foreground="White"
                            Background="#3B5998"
                            FontWeight="Bold"
                            Click="BtnClients_Click" />
                    <Button x:Name="BtnOrders"
                            Content="🧾 Orders"
                            Margin="0 0 0 200"
                            Foreground="White"
                            Background="#3B5998"
                            FontWeight="Bold"
                            Click="BtnOrders_Click" />
                </StackPanel>

                <!-- exit bottom-left -->
                <Button x:Name="BtnExit"
                        DockPanel.Dock="Bottom"
                        Content="⏎ Exit"
                        Height="32"
                        Margin="0 10 0 0"
                        Foreground="White"
                        Background="#E74C3C"
                        FontWeight="Bold"
                        Click="BtnExit_Click" />
            </DockPanel>
        </Border>

        <!-- main area -->
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden" />

    </DockPanel>
</Window>
