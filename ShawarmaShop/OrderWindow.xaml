<Window x:Class="ShawarmaShop.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order"
        Width="780"
        Height="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- top -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0 0 0 10">
            <TextBlock Text="Client"
                       VerticalAlignment="Center"
                       Margin="0 0 6 0"/>
            <ComboBox x:Name="CmbClients"
                      Width="180"
                      DisplayMemberPath="Name"/>

            <TextBlock Text="Ready at"
                       VerticalAlignment="Center"
                       Margin="18 0 6 0"/>
            <DatePicker x:Name="DpDeliveryDate"
                        Width="130"/>
            <TextBox x:Name="TxtDeliveryTime"
                     Width="60"
                     Margin="4 0 0 0"
                     VerticalContentAlignment="Center"
                     Text="12:00"/>
        </StackPanel>

        <!-- items -->
        <DataGrid x:Name="ShawarmaItemsGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Add"
                                        Binding="{Binding IsSelected}"
                                        Width="60"/>
                <DataGridTextColumn Header="Shawarma"
                                    Binding="{Binding Name}"
                                    IsReadOnly="True"
                                    Width="200"/>
                <DataGridTextColumn Header="Price"
                                    Binding="{Binding Price}"
                                    IsReadOnly="True"
                                    Width="80"/>
                <DataGridTextColumn Header="Qty"
                                    Binding="{Binding Quantity}"
                                    Width="60"/>
                <DataGridTextColumn Header="Subtotal"
                                    Binding="{Binding Subtotal}"
                                    IsReadOnly="True"
                                    Width="90"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- bottom -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <TextBlock Text="Comment:"
                       VerticalAlignment="Center"
                       Margin="0 0 6 0"/>
            <TextBox x:Name="TxtComment"
                     Width="220"
                     Margin="0 0 16 0"/>
            <TextBlock Text="Total:"
                       VerticalAlignment="Center"
                       Margin="0 0 6 0"/>
            <TextBlock x:Name="TxtTotal"
                       Width="80"
                       VerticalAlignment="Center"/>
            <Button x:Name="BtnSave"
                    Width="90"
                    Margin="16 0 6 0"
                    Content="Save"
                    Click="BtnSave_Click"/>
            <Button x:Name="BtnCancel"
                    Width="90"
                    Content="Cancel"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
